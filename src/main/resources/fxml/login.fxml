<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.johnverz.controller.LoginController">

    <VBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
      <children>
         <Label text="Login">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <Label fx:id="loginError" text="Invalid Credentials." textFill="RED" visible="false" />
         <TextField fx:id="textUsername" />
         <PasswordField fx:id="textPassword" />
         <Button mnemonicParsing="false" onAction="#onLogin" text="Login" />
      </children></VBox>

</AnchorPane>
